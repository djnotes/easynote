<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyAppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?android:attr/statusBarColor</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/josefin_sans</item>
        <item name="fontStyle">normal</item>
        <item name="textAppearanceBody1">@style/TextAppearance.MyApp.Body1</item>
        <!-- Shapes -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.MyApp.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.MyApp.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.MyApp.LargeComponent</item>

    </style>



    <style name="Theme.MyAppCompatTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:statusBarColor">?android:attr/statusBarColor</item>
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorAccent">@color/red_300</item>
        <item name="fontFamily">@font/gemunu</item>
        <item name="buttonStyle">@style/Theme.MyApp.MyButton</item>
        <item name="textAppearanceBody1">@style/TextAppearance.MyAppCompatTheme.Body1</item>
        <!-- Shapes -->
        <item name="cornerFamily">rounded</item>
    </style>


    <style name="TextAppearance.MyApp.Body1" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">20pt</item>
        <item name="fontStyle">italic</item>
    </style>

    <style name="Theme.MyApp.MyButton" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">@color/blue_500</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="TextAppearance.MyAppCompatTheme.Body1" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">8pt</item>
    </style>



</resources>